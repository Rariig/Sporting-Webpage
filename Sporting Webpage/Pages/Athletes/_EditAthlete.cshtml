@using SportEU.Core.Extensions
@model SportEU.Pages.AthletesPage

@Html.Editor(model => model.Item.FirstMidName)
@Html.Editor(model => model.Item.LastName)
@Html.Editor(model => model.Item.Age)
@Html.Editor(model => model.Item.ValidFrom)
@Html.Editor(model => model.Item.Strength)
@Html.Editor(model => model.Item.Photo)

<div class="form-group">
    <div class="table">
        <table>
            <tr>
            @{
                int cnt = 0;
                foreach (var group in Model.Groups)
                {
                    if (cnt++ % 3 == 0)
                    {
                        @:</tr><tr>
                    }
                    @:<td>
                    <input type="checkbox"
                           name="selectedGroups"
                           value="@group.Value"
                           @(Html.Raw(Model.IsAssigned(group) ? "checked=\"checked\"" : "")) />
                    @group.Text
                    @:</td>
                }
                @:</tr>
            }
        </table>
    </div>
</div>

