@page
@model SportEU.Pages.CoachesPage
@using SportEU.Core.Extensions

@{
    ViewData["Page"] = "Coaches";
    Layout = "_Index";
}


<table class="table">
    <thead>
        <tr>
            @Html.TableSortHeader(x => x.Item.FirstMidName,Model)
            @Html.TableSortHeader(x => x.Item.LastName,Model)
            @Html.TableSortHeader(x => x.Item.ValidFrom,Model)
            @Html.TableSortHeader(x => x.Item.Salary,Model)
            @Html.TableSortHeader(x => x.Item.Speciality,Model)
            @Html.TableHeader(x => x.Item.PhotoAsString)
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items) {
        <tr>
            @Html.RowData(x => item.FirstMidName)
            @Html.RowData(x => item.LastName)
            @Html.RowData(x => item.ValidFrom)
            @Html.RowData(x => item.Salary)
            @Html.RowData(x => item.Speciality)
            @Html.RowImage(item.PhotoAsString)
            @Html.RowButtons(Model.PageUrl, $"{ item.Id}")
        </tr>
    }
    </tbody>
</table>